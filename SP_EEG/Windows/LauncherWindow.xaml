<Window x:Class="SP_EEG.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP_EEG"
        mc:Ignorable="d"
        Title="EEG Tool Launcher" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="Epoc Headset" Style="{DynamicResource ButtonS2}" Foreground="#093145" Background="Transparent" Click="epoc_Click" Margin="30,0,0,0"/>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="MindWave Headset" Style="{DynamicResource ButtonS2}" Foreground="#093145" Background="Transparent" Click="mindWave_Click"  Margin="0,0,30,0"/>
        </Grid>

    </Grid>
</Window>
